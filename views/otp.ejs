<!-- views/otp.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tutionwala OTP</title>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        background: #efefef;
        padding: 20px 0;
        font-family: Arial, sans-serif;
      }
      .mytemplate {
        border: 1px solid #efefef;
        width: 800px;
        margin: 20px auto;
        border-radius: 8px;
        background: white;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }
      .logo {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 0;
      }
      .logo img {
        width: 110px;
        margin: 0 auto;
      }
      .template-title {
        background: #042f5e;
        padding: 20px;
        text-align: center;
      }
      .template-title h2 {
        color: white;
        font-weight: bold;
        margin: 0;
      }
      .template-content {
        padding: 20px;
        font-size: 16px;
        color: #333;
        text-align: center;
      }
      .otp-box {
        display: inline-block;
        font-size: 22px;
        font-weight: bold;
        background: #f3f3f3;
        padding: 10px 20px;
        border-radius: 5px;
        margin-top: 10px;
        letter-spacing: 5px;
      }
      .footer {
        background: #042f5e;
        padding: 20px;
        text-align: center;
      }
      .footer p {
        color: white;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <div class="mytemplate">
      <div class="logo">
        <img
          src="https://tutionwala.com/_next/image?url=%2Flogo.png&w=640&q=75"
          alt="Tutionwala Logo"
        />
      </div>
      <div class="template-title">
        <h2>OTP for Tutionwala</h2>
      </div>
      <div class="template-content">
        <p>Dear <%= fullname %>,</p>
        <p>Use the following OTP to verify your account:</p>
        <div class="otp-box"><%= otp %></div>
        <p>
          This OTP is valid for a limited time. Do not share it with anyone.
        </p>
      </div>
      <div class="footer">
        <p>
          &copy; <%= new Date().getFullYear() %> Tutionwala.com. All Rights
          Reserved.
        </p>
      </div>
    </div>
  </body>
</html>
